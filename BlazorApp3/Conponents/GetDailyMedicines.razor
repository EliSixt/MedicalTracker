<h3>GetDailyMedicines</h3>

<GetMedicine @bind-Medicine="DayToDayMedicine.Medicine" />

<div style="margin: 5px">
    <input type="text" @bind="DayToDayMedicine.DoseMg" placeholder="Dose Amount" /> @*Change dose amount*@
</div>
<div style="margin: 5px">
    <input type="text" @bind="DayToDayMedicine.FrequencyOfDose" placeholder="How often/when to take drug" />
</div>
<div style="margin: 5px">
    <input type="time" bind="@TimeProxy" />
</div>
<div style="margin: 5px">
    <button @onclick="ConfirmTimeSpan">Bind TimeSpan</button>
</div>

The Daily Medicine: @DayToDayMedicine

@code {
    [Parameter]
    public DailyMedicine DayToDayMedicine { get; set; } = new();

    [Parameter]
    public EventCallback<DailyMedicine> DayToDayMedicineChanged { get; set; }

    public TimeSpan LocalTime = TimeSpan.FromHours(0);

    string TimeProxy
    {
        get => DayToDayMedicine.Time.ToString();
        set
        {
            //TimeSpan.TryParse(value, out DayToDayMedicine.TimeSpanOfDose);
            //DayToDayMedicine.Time.TryParse(value, out DayToDayMedicine.TimeSpanOfDose );
            TimeSpan.TryParse(value, out LocalTime);
            DayToDayMedicine.TimeSpanOfDose = LocalTime;

        }
    }

    private void ConfirmTimeSpan()
    {
        DayToDayMedicine.TimeSpanOfDose = LocalTime;
        DayToDayMedicineChanged.InvokeAsync(DayToDayMedicine);

    }
}
